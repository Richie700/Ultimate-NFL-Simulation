<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/simulation_result_background"
    tools:context="lol.footballsimulation.SimulationResult">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/team1Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="26sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/team2Name"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/team1Score"
        android:textSize="48sp"
        android:layout_below="@+id/team1Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/team2Score"
        android:textSize="48sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/team2Name"
        android:layout_alignRight="@+id/team2Name"
        android:layout_alignEnd="@+id/team2Name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back To Main Menu"
        android:id="@+id/mainMenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Offense"
        android:id="@+id/totalOffense"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:background="#a9000000"
        android:layout_below="@+id/team1Score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/t1to"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/totalOffense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/t2to"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/totalOffense"
        android:layout_alignLeft="@+id/team2Score"
        android:layout_alignStart="@+id/team2Score"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passing Offense"
        android:id="@+id/passOffense"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:background="#a9000000"
        android:layout_below="@+id/t2to"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/t1po"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/passOffense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/t2po"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/passOffense"
        android:layout_alignLeft="@+id/t2to"
        android:layout_alignStart="@+id/t2to"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rushing Offense"
        android:id="@+id/rushOffense"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:background="#a9000000"
        android:layout_below="@+id/t1po"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/t1ro"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/t1po"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/t2ro"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/t2po"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takeaways"
        android:id="@+id/takeAways"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:background="#a9000000"
        android:layout_below="@+id/t1ro"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/t1ta"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/t1ro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/t2ta"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/t2ro"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
